<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
    android:weightSum="3"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="150dp"
            android:background="@color/gray_gray"
            >
        </TextView>

        <Button
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:id="@+id/gallery"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/more_gray"
            android:background="@drawable/close">

        </Button>

        <Button
            android:id="@+id/bright"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/brightness"
            android:backgroundTint="@color/more_gray"
            android:gravity="bottom">

        </Button>

        <Button
            android:id="@+id/timer"
            android:layout_width="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/timer"
            android:backgroundTint="@color/more_gray">
        </Button>

        <TextView
            android:id="@+id/enter_code5"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignTop="@id/click"
            android:textSize="20sp"
            android:background="@drawable/light_gray_circle"
            >



        </TextView>


        <Button
            android:id="@+id/photo"
            android:layout_alignTop="@id/click"
            android:layout_marginLeft="77dp"
            android:layout_marginTop="16dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/gallery"
            android:backgroundTint="@color/gray">
        </Button>

        <Button
            android:id="@+id/click"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignTop="@+id/bright"
            android:layout_centerInParent="true"
            android:layout_marginTop="680dp"
            android:background="@drawable/click"
            android:backgroundTint="@color/gray"></Button>

        <TextView
            android:id="@+id/reset"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_alignTop="@id/click"
            android:layout_marginRight="70dp"
            android:textSize="20sp"
            android:background="@drawable/dark_gray_circle"
            >
        </TextView>


        <Button
            android:id="@+id/retake"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_alignTop="@+id/click"
            android:layout_marginRight="77dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/recapture"
            android:backgroundTint="@color/light_gray">

        </Button>


        <Button
            android:layout_marginTop="800dp"
            android:layout_marginLeft="90dp"
            android:layout_height="31dp"
            android:background="@drawable/very_round_circle"
            android:text="Photo"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_width="120dp"
            android:textSize="14dp"
            >
        </Button>

        <Button
            android:layout_marginTop="800dp"
            android:layout_marginLeft="215dp"
            android:layout_height="31dp"
            android:background="@drawable/white_oval"
            android:text="Video"
            android:gravity="center"
            android:textColor="@color/more_gray"
            android:layout_width="120dp"
            android:textSize="14dp"
            >
        </Button>







    </RelativeLayout>

</LinearLayout>
