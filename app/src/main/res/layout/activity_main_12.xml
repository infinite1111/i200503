<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <TextView

            android:id="@+id/enter_code1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:background="@drawable/rounded_white">
        </TextView>

        <Button
            android:layout_marginLeft="25dp"
            android:layout_marginTop="48dp"
            android:id="@+id/st_arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/close">
        </Button>



        <TextView

            android:layout_marginLeft="70dp"
            android:id="@+id/chat"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Item"
            android:layout_marginTop="49dp"
            android:textStyle="bold"
            android:textSize="27sp">
        </TextView>

        <TextView
            android:id="@+id/box1"
            android:paddingLeft="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="180dp"
            android:layout_marginTop="150dp"
            android:layout_height="120dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:background="@drawable/rounded_white">
        </TextView>

        <Button
            android:layout_marginLeft="105dp"
            android:layout_alignTop="@+id/chat"
            android:layout_marginTop="140dp"
            android:id="@+id/camera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/orange"
            android:background="@drawable/camera">

        </Button>

        <TextView
            android:layout_marginLeft="80dp"
            android:id="@+id/upload"
            android:layout_alignTop="@+id/camera"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:text="Upload Image"
            android:layout_marginTop="35dp"
            android:textStyle="normal"
            android:textSize="15sp">
        </TextView>

        <TextView
            android:id="@+id/box2"
            android:paddingLeft="30dp"
            android:layout_marginLeft="220dp"
            android:layout_width="180dp"
            android:layout_marginTop="150dp"
            android:layout_height="120dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:background="@drawable/rounded_white">
        </TextView>

        <Button
            android:layout_marginLeft="295dp"
            android:layout_alignTop="@+id/chat"
            android:layout_marginTop="140dp"
            android:id="@+id/video"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/orange"
            android:background="@drawable/video">

        </Button>

        <TextView
            android:layout_marginLeft="270dp"
            android:id="@+id/upload2"
            android:layout_alignTop="@+id/camera"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:text="Upload Video"
            android:layout_marginTop="35dp"
            android:textStyle="normal"
            android:textSize="15sp">
        </TextView>

        <TextView
            android:layout_marginLeft="30dp"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/upload"
            android:layout_marginTop="60dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/enter_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignTop="@+id/name"
            android:layout_marginTop="30dp"
            android:hint="Enter item name"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:background="@drawable/round_rectangle"
            >
        </TextView>

        <TextView
            android:layout_marginLeft="30dp"
            android:id="@+id/rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/enter_name"
            android:layout_marginTop="60dp"
            android:text="Hourly rate"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/hourly"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignTop="@+id/rate"
            android:layout_marginTop="30dp"
            android:hint="Enter hourly rate"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:background="@drawable/round_rectangle"
            >
        </TextView>

        <TextView
            android:layout_marginLeft="30dp"
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/hourly"
            android:layout_marginTop="60dp"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:id="@+id/des"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/description"
            android:layout_marginTop="30dp"
            android:hint="Enter description"
            android:paddingLeft="20dp"
            android:textSize="20sp"
            android:background="@drawable/round_rectangle"
            >
        </TextView>

        <TextView
            android:layout_marginLeft="30dp"
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/des"
            android:layout_marginTop="82dp"
            android:text="City"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold">
        </TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="50dp"
            android:background="@drawable/round_rectangle"
            android:layout_alignTop="@+id/city"
            android:layout_marginTop="30dp"/>

        <Spinner
            android:id="@+id/city_dropdown"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/city"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            android:entries="@array/dropdown_cities"
            android:paddingLeft="20dp"
            android:spinnerMode="dropdown">

        </Spinner>

        <Button
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Post Item"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_alignTop="@id/city_dropdown"
            android:layout_marginTop="150dp"
            android:background="@drawable/rounded_orange">

        </Button>






    </RelativeLayout>



</LinearLayout>