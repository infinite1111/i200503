<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item android:drawable="@android:color/transparent" />
    <!-- Dotted Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="6dp"/>  <!-- Adjust border width as needed -->
            android:color="@android:color/darker_gray" /> <!-- Adjust border color as needed -->
            <corners android:radius="5dp" /> <!-- Adjust corner radius as needed -->
            <dash android:color="@android:color/darker_gray"/> <!-- Adjust dotted line color as needed -->
            android:gap="22dp" /> <!-- Adjust gap between dots as needed -->
        </shape>
    </item>
</layer-list>
